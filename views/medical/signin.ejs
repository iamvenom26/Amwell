<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Amwell - Medical Owner Login</title>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Manrope', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background: #f5f7fa;
      color: #2c3e50;
      overflow-x: hidden;
      position: relative;
    }

    /* Background Pattern */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        45deg,
        rgba(122, 178, 211, 0.05) 25%,
        transparent 25%,
        transparent 50%,
        rgba(122, 178, 211, 0.05) 50%,
        rgba(122, 178, 211, 0.05) 75%,
        transparent 75%
      );
      background-size: 40px 40px;
      z-index: -1;
      opacity: 0.5;
    }

    /* Floating Particles Animation */
    .particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      pointer-events: none;
    }

    .particle {
      position: absolute;
      width: 8px;
      height: 8px;
      background: rgba(122, 178, 211, 0.3);
      border-radius: 50%;
      animation: float 15s infinite ease-in-out;
    }

    @keyframes float {
      0% { transform: translateY(100vh) scale(1); opacity: 0.5; }
      50% { opacity: 1; }
      100% { transform: translateY(-50vh) scale(0.5); opacity: 0; }
    }

    /* Header Styles */
    .header {
      background: linear-gradient(180deg, #4A628A, #7AB2D3);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    .header.scrolled {
      transform: translateY(-5px);
      opacity: 0.95;
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 2rem;
    }

    .site-logo {
      font-size: 1.8rem;
      font-weight: 800;
      color: #ffffff;
      text-decoration: none;
      transition: transform 0.3s ease, color 0.3s ease;
    }

    .site-logo:hover {
      transform: scale(1.05);
      color: #ffffff;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .nav-links a {
      color: #ffffff;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 1rem;
      font-weight: 600;
      position: relative;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    .nav-links a::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: -2px;
      left: 0;
      background: #7AB2D3;
      transition: width 0.3s ease;
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    .nav-links a:hover {
      color: #7AB2D3;
      transform: translateY(-2px);
    }

    /* Signin Section */
    .signin-section {
      padding: 5rem 2rem;
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .signin-container {
      max-width: 400px;
      width: 100%;
      background: #ffffff;
      padding: 2rem;
      border-radius: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      animation: fadeInUp 0.6s ease;
      transition: transform 0.3s ease;
    }

    .signin-container:hover {
      transform: translateY(-5px);
    }

    .section-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .section-header h1 {
      font-size: 2.5rem;
      color: #4A628A;
      margin-bottom: 0.5rem;
    }

    .section-header p {
      color: #6b7280;
      font-size: 1.1rem;
    }

    .signin-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      color: #2c3e50;
      font-size: 0.95rem;
      font-weight: 500;
    }

    .form-group input {
      padding: 0.8rem;
      border: 1px solid #d1d5db;
      border-radius: 5px;
      background: #f9fafb;
      color: #2c3e50;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .form-group input:focus {
      outline: none;
      border-color: #7AB2D3;
      background: #ffffff;
      box-shadow: 0 0 5px rgba(122, 178, 211, 0.3);
    }

    .form-group input::placeholder {
      color: #6b7280;
    }

    .submit-button {
      padding: 0.8rem;
      background: linear-gradient(45deg, #7AB2D3, #4A628A);
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      margin-top: 1rem;
    }

    .submit-button:hover {
      background: linear-gradient(45deg, #4A628A, #7AB2D3);
      transform: translateY(-2px);
    }

    .ripple {
      position: absolute;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: scale(0);
      animation: ripple 0.6s linear;
      pointer-events: none;
    }

    @keyframes ripple {
      to { transform: scale(4); opacity: 0; }
    }

    .signup-link {
      text-align: center;
      margin-top: 1rem;
      color: #6b7280;
      font-size: 0.95rem;
    }

    .signup-link a {
      color: #7AB2D3;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .signup-link a:hover {
      color: #4A628A;
      text-decoration: underline;
    }

    /* Footer Styles */
    .footer {
      background: linear-gradient(180deg, #7AB2D3, #4A628A);
      color: #ffffff;
      padding: 3rem 0 1rem;
      margin-top: auto;
    }

    .footer p {
      margin: 0;
      font-size: 0.9rem;
      color: #e6f0fa;
      text-align: center;
    }

    .footer::before {
      content: '';
      display: block;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer::before {
      content: "About Amwell Your trusted healthcare companion providing 24/7 medical assistance and emergency services to ensure your safety and peace of mind. | Quick Links About Us Services Contact User Login Medical Login Ambulance Login | Contact Info Emergency: +1 (555) 123-4567 support@amwell.com";
      display: none;
    }

    .footer-bottom {
      text-align: center;
      padding-top: 2rem;
      margin-top: 2rem;
      border-top: 1px solid #ffffff33;
    }

    /* Back to Top Button */
    .back-to-top {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: #7AB2D3;
      color: #fff;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
      opacity: 0;
      pointer-events: none;
      z-index: 200;
    }

    .back-to-top.show {
      opacity: 1;
      pointer-events: auto;
    }

    .back-to-top:hover {
      background: #4A628A;
      transform: scale(1.1);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    /* Animations */
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .signin-section {
        padding: 3rem 1rem;
      }

      .section-header h1 {
        font-size: 2rem;
      }

      .signin-container {
        padding: 1.5rem;
      }

      .nav-links {
        gap: 1rem;
      }

      .nav-links a {
        padding: 0.5rem;
        font-size: 0.9rem;
      }

      .site-logo {
        font-size: 1.5rem;
      }
    }

    @media (max-width: 480px) {
      .signin-section {
        padding: 2rem 1rem;
      }

      .signin-container {
        max-width: 100%;
      }

      .form-group input {
        padding: 0.7rem;
        font-size: 0.9rem;
      }

      .submit-button {
        padding: 0.7rem;
        font-size: 0.9rem;
      }

      .back-to-top {
        width: 2.5rem;
        height: 2.5rem;
        bottom: 1.5rem;
        right: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <!-- Particles Background -->
  <div class="particles">
    <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
    <div class="particle" style="left: 30%; animation-delay: 2s;"></div>
    <div class="particle" style="left: 50%; animation-delay: 4s;"></div>
    <div class="particle" style="left: 70%; animation-delay: 6s;"></div>
    <div class="particle" style="left: 90%; animation-delay: 8s;"></div>
  </div>

  <!-- Header -->
  <header class="header">
    <nav class="nav-container">
      <a href="/" class="site-logo"><i class="fas fa-heartbeat mr-2"></i>Amwell</a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/#services">Services</a>
        <% if (locals.user) { %>
          <a href="/user/logout">Logout</a>
        <% } else { %>
          <a href="/medical/signup">Sign Up</a>
        <% } %>
      </div>
    </nav>
  </header>

  <!-- Signin Section -->
  <section class="signin-section">
    <div class="signin-container">
      <div class="section-header">
        <h1><i class="fas fa-sign-in-alt mr-2"></i>Medical Owner Login</h1>
        <p>Access your Amwell medical store dashboard.</p>
      </div>
      <form action="/medical/signin" method="POST" class="signin-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input name="email" id="email" type="email" placeholder="Enter email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" id="password" type="password" placeholder="Enter password" required />
        </div>
        <button type="submit" class="submit-button">Sign In</button>
      </form>
      <div class="signup-link">
        <p>Don't have an account? <a href="/medical/signup">Sign Up</a></p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <p>Â© 2025 Amwell. All rights reserved.</p>
  </footer>

  <!-- Back to Top Button -->
  <a href="#" class="back-to-top"><i class="fas fa-arrow-up"></i></a>

  <!-- Audio for Welcome Sound -->
  <audio id="welcome-sound" preload="auto">
    <source src="https://cdn.pixabay.com/audio/2023/08/31/audio_6f6e854e43.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>

  <script>
    // Play Welcome Sound on Load
    const welcomeSound = document.getElementById('welcome-sound');
    window.addEventListener('load', () => {
      welcomeSound.play().catch(error => console.log('Audio playback failed:', error));
    });

    // Header Scroll Effect
    window.addEventListener('scroll', () => {
      const header = document.querySelector('.header');
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    // Back to Top Button
    const backToTop = document.querySelector('.back-to-top');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTop.classList.add('show');
      } else {
        backToTop.classList.remove('show');
      }
    });

    // Smooth Scroll for Anchor Links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });

    // Submit Button Ripple Effect
    const submitButton = document.querySelector('.submit-button');
    submitButton.addEventListener('click', (e) => {
      const rect = submitButton.getBoundingClientRect();
      const ripple = document.createElement('span');
      ripple.className = 'ripple';
      const diameter = Math.max(rect.width, rect.height);
      ripple.style.width = ripple.style.height = `${diameter}px`;
      ripple.style.left = `${e.clientX - rect.left - diameter / 2}px`;
      ripple.style.top = `${e.clientY - rect.top - diameter / 2}px`;
      submitButton.appendChild(ripple);
      ripple.addEventListener('animationend', () => ripple.remove());
    });

    // Generate Particles
    const particlesContainer = document.querySelector('.particles');
    for (let i = 0; i < 5; i++) {
      const particle = particlesContainer.children[i];
      particle.style.left = `${Math.random() * 100}%`;
      particle.style.animationDuration = `${10 + Math.random() * 10}s`;
      particle.style.animationDelay = `${Math.random() * 5}s`;
    }
  </script>
</body>
</html>