    <!-- Stats Cards -->
    <div class="stats-grid">
      <div class="stat-card">
        <i class="fas fa-users stat-icon"></i>
        <div class="stat-info">
          <h3>Total Customers</h3>
          <p><%= users.length %></p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-envelope stat-icon"></i>
        <div class="stat-info">
          <h3>New Messages</h3>
          <p>5</p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-star stat-icon"></i>
