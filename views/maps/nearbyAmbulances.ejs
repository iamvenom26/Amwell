<!DOCTYPE html>
<html>
<head>
  <title>Nearby Ambulances</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
      color: #333;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin: 10px 0;
      padding: 15px;
      background: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .btn {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Nearby Ambulances</h1>
    <ul>
      <% ambulances.forEach(ambulance => { %>
        <li>
          <div>
            <strong>Driver Name:</strong> <%= ambulance.driverName %><br>
            <strong>Ambulance Name:</strong> <%= ambulance.ambulanceName %><br>
            <strong>Vehicle Number:</strong> <%= ambulance.vehicleNumber %>
          </div>
          <a href="/user/connect-ambulance/<%= ambulance._id %>" class="btn">Connect</a>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>